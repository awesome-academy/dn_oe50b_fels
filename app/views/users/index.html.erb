<table>
  <thead>
    <tr>
      <th><%= t "lessions.name" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to t("action.show"), user %></td>
        <td><%= link_to t("action.edit"), edit_user_path(user) %></td>
        <td><%= link_to t("action.delete"), user, method: :delete, data: { confirm: t("mess.sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
